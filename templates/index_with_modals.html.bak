</dialog>

<!-- MODAL DE EDICIÓN DE PRODUCTO -->
<dialog id="editProductModal" class="rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 w-full max-w-4xl mx-auto p-0 backdrop:bg-black backdrop:bg-opacity-50">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100">
        <div class="flex justify-between items-center">
            <h2 class="text-lg font-medium">Editar Producto</h2>
            <button id="closeEditModal" class="text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-gray-100">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
