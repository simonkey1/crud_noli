# Configuración de entorno
ENVIRONMENT=development  # development o production

# Configuración de la base de datos PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=crud_noli
DATABASE_HOST=localhost  # usar 'db' cuando se ejecute con Docker
DATABASE_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${POSTGRES_DB}

# Credenciales de administrador para crear el usuario inicial
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
FORCE_ADMIN_CREATION=true  # establecer en 'false' en producción

# Clave JWT para autenticación
JWT_SECRET_KEY=supersecretkey

# Configuración de almacenamiento (opcional)
FILEBASE_KEY=
FILEBASE_SECRET=
FILEBASE_BUCKET=

# Configuración de Mercado Pago (opcional)
MERCADO_PAGO_ACCESS_TOKEN=
MERCADO_PAGO_PUBLIC_KEY=

# URL base (para webhooks y callbacks)
BASE_URL=http://localhost:8000
