# Variables de entorno requeridas para la aplicación

# Base de datos PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/granosabor

# Clave secreta para JWT (generar una clave única y segura)
JWT_SECRET_KEY=tu_clave_secreta_jwt_muy_segura_aqui

# Configuración de admin por defecto (opcional)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Configuración de Filebase para almacenamiento de archivos (opcional)
FILEBASE_KEY=tu_filebase_key
FILEBASE_SECRET=tu_filebase_secret
FILEBASE_BUCKET=tu_bucket_name

# Configuración de backup desde GitHub (opcional)
GITHUB_BACKUP_URL=https://raw.githubusercontent.com/tu-usuario/tu-repo/main/backup.zip
GITHUB_TOKEN=tu_github_token

# Configuración de post-deploy
POST_DEPLOY_RESTORE=true
POST_DEPLOY_FORCE=false
AUTO_RESTORE_ON_EMPTY=true
FORCE_ADMIN_CREATION=false

# Seguridad de base de datos
ENABLE_RLS=true

# Configuración de entorno
ENVIRONMENT=development