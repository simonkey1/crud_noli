# Variables de entorno requeridas para la aplicación

# — Entorno —
ENVIRONMENT=production

# — Base de datos PostgreSQL —
# Opción 1: URL completa (recomendado para producción como Render)
DATABASE_URL=postgresql://usuario:password@localhost:5432/granosabor

# Opción 2: Componentes individuales (para desarrollo local, todos opcionales si usas DATABASE_URL)
# POSTGRES_USER=tu_usuario
# POSTGRES_PASSWORD=tu_contraseña
# POSTGRES_DB=tu_base_de_datos
# POSTGRES_SERVER=localhost
# POSTGRES_PORT=5432

# — Administración (opcional para scripts de backup) —
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
JWT_SECRET_KEY=tu_clave_secreta_jwt_muy_segura_aqui

# — Filebase S3 (opcional) —
FILEBASE_KEY=tu_filebase_key
FILEBASE_SECRET=tu_filebase_secret
FILEBASE_BUCKET=tu_bucket_name

# — Control de backups (opcional) —
POST_DEPLOY_RESTORE=false
POST_DEPLOY_FORCE=false
AUTO_RESTORE_ON_EMPTY=true

# — Otras configuraciones opcionales —
BASE_URL=http://localhost:8000
FORCE_ADMIN_CREATION=false

# Configuración de post-deploy
POST_DEPLOY_RESTORE=true
POST_DEPLOY_FORCE=false
AUTO_RESTORE_ON_EMPTY=true
FORCE_ADMIN_CREATION=false

# Seguridad de base de datos
ENABLE_RLS=true

# Configuración de entorno
ENVIRONMENT=development